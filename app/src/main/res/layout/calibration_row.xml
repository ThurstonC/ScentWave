<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calibration_row"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/calibration_bay_number"
            android:text="1"
            android:layout_width="34dp"
            android:layout_height="199dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:textSize="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/raw_value_label"
            android:text="Raw Value:"
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/raw_value"
            android:layout_width="199dp"
            android:layout_height="69dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_below="@id/raw_value_label"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/calibrated_value_label"
            android:text="Calibrated value:"
            android:layout_width="199dp"
            android:layout_height="39dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_below="@id/raw_value"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/calibrated_value"
            android:layout_width="199dp"
            android:layout_height="69dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_below="@+id/calibrated_value_label"
            android:gravity="center_vertical|center_horizontal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <Button
            android:id="@+id/increase_calibration"
            android:text="+"
            android:layout_width="179dp"
            android:layout_height="99dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textSize="50dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"/>
        <Button
            android:id="@+id/decrease_calibration"
            android:text="-"
            android:layout_width="179dp"
            android:layout_height="99dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textSize="50dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_below="@id/increase_calibration"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/bay_active_state"
            android:text="Bay Is Active"
            android:layout_width="179dp"
            android:layout_height="39dp"
            android:background="#99CC00"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            />
        <Button
            android:id="@+id/toggle_active_state"
            android:text="Toggle"
            android:textColor="@android:color/black"
            android:layout_width="179dp"
            android:layout_height="169dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textSize="25dp"
            android:layout_below="@id/bay_active_state"/>
    </RelativeLayout>
</LinearLayout>

