<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calibration_row"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/calibration_bay_number"
            android:text="1"
            android:layout_width="34dp"
            android:layout_height="294dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:background="@android:color/white"
            android:textSize="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/raw_value_label"
            android:text="Raw Value:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/raw_value"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@id/raw_value_label"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/calibrated_value_label"
            android:text="Calibrated value:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@id/raw_value"
            android:gravity="center_vertical|center_horizontal"
            />
        <TextView
            android:id="@+id/calibrated_value"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@+id/calibrated_value_label"
            android:gravity="center_vertical|center_horizontal"
            />
    </RelativeLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="bottom"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <Button
            android:id="@+id/increase_calibration"
            android:text="+"
            android:layout_width="174dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textSize="50dp"
            android:background="@android:color/white"
            android:layout_alignParentTop="true"/>
        <Button
            android:id="@+id/decrease_calibration"
            android:text="-"
            android:layout_width="174dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textSize="50dp"
            android:background="@android:color/white"
            android:layout_below="@id/increase_calibration"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/bay_active_state"
            android:text="Bay Is Active"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#99CC00"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|center_horizontal"
            />
        <Button
            android:id="@+id/toggle_active_state"
            android:text="Set Inactive"
            android:layout_width="174dp"
            android:layout_height="172dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textSize="25dp"
            android:background="#FF4444"
            android:layout_below="@id/bay_active_state"/>
    </RelativeLayout>
</LinearLayout>

