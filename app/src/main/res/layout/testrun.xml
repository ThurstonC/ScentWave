<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    // This is the test run header area.  Used for summary and state info for the list
    <LinearLayout android:layout_height="300dp" android:layout_width="fill_parent" android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray" >
            <TextView
                android:id="@+id/teststepnumber"
                android:layout_width="144dp"
                android:layout_height="194dp"
                android:gravity="center"
                android:background="@android:color/white"
                android:textSize="25dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/start_time_label"
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:text="Start time"
                android:gravity="center"
                android:layout_below="@id/teststepnumber"
                />
            <TextView
                android:id="@+id/start_time"
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:layout_below="@id/start_time_label"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray" >
            <TextView
                android:id="@+id/currentactivitylabel"
                android:text="Activity"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@android:color/white"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:id="@+id/teststepinstruction1"
                android:text="1. Scan Mitec Barcode"
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_margin="3dp"
                android:textSize="18dp"
                android:background="@android:color/white"
                android:layout_below="@id/currentactivitylabel"/>
            <TextView
                android:id="@+id/teststepinstruction2"
                android:text="2. Scan Scentair Barcode"
                android:layout_width="144dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:layout_margin="3dp"
                android:textSize="18dp"
                android:background="@android:color/white"
                android:layout_below="@id/teststepinstruction1"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/darker_gray" >
            <TextView
                android:id="@+id/expectedresultslabel"
                android:text="Expected Results"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:background="@android:color/white"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:id="@+id/teststepverifylist"
                android:text="Barcodes entered into Bay/Row"
                android:layout_width="144dp"
                android:layout_height="244dp"
                android:gravity="left|center_vertical"
                android:layout_margin="3dp"
                android:textSize="18dp"
                android:background="@android:color/white"
                android:layout_below="@id/expectedresultslabel"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray" >
            <TextView
                android:id="@+id/test_step_progress"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:text="progress"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="13dp"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/active_bays_label"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Active Bays:"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="12dp"
                android:background="@android:color/white"
                android:layout_below="@id/test_step_progress"
                />
            <TextView
                android:id="@+id/active_bays"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="25dp"
                android:background="@android:color/white"
                android:layout_toRightOf="@id/active_bays_label"
                android:layout_below="@id/test_step_progress"
                />
            <TextView
                android:id="@+id/passed_label"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Passed:"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="12dp"
                android:background="@android:color/white"
                android:layout_below="@id/active_bays_label"
                />
            <TextView
                android:id="@+id/number_passed"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="25dp"
                android:background="@android:color/white"
                android:layout_toRightOf="@id/passed_label"
                android:layout_below="@id/active_bays_label"
                />
            <TextView
                android:id="@+id/failed_label"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Failed:"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="12dp"
                android:background="@android:color/white"
                android:layout_below="@id/passed_label"
                />
            <TextView
                android:id="@+id/number_failed"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="25dp"
                android:background="@android:color/white"
                android:layout_toRightOf="@id/failed_label"
                android:layout_below="@id/passed_label"
                />
            <TextView
                android:id="@+id/skipped_bays_label"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Skipped Bays:"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="12dp"
                android:background="@android:color/white"
                android:layout_below="@id/failed_label"
                />
            <TextView
                android:id="@+id/skipped_bays"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:gravity="center"
                android:layout_margin="3dp"
                android:textSize="25dp"
                android:background="@android:color/white"
                android:layout_toRightOf="@id/skipped_bays_label"
                android:layout_below="@id/failed_label"
                />
        </RelativeLayout>
    </LinearLayout>
    // This is the body for the listview
    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:isScrollContainer="true"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="false"
        android:smoothScrollbar="true"
        android:descendantFocusability="beforeDescendants">
    </ListView>
</LinearLayout>
