<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bay_item"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="300dp">
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/baynumber"
            android:text="1"
            android:layout_width="34dp"
            android:layout_height="294dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:background="@android:color/white"
            android:textSize="40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <TextView
            android:id="@+id/mitecbarcodelabel"
            android:text="Mitec Barcode:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/mitecbarcode"
            android:text="xxx123xxx"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@id/mitecbarcodelabel"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:id="@+id/scentairbarcodelabel"
            android:text="Scentair Barcode:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@id/mitecbarcode"
            />
        <TextView
            android:id="@+id/scentairbarcode"
            android:text="xxx123xxx"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@+id/scentairbarcodelabel"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:id="@+id/unitstatelabel"
            android:text="Unit State:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@+id/scentairbarcode"
            />
        <TextView
            android:id="@+id/unitstate"
            android:text="FAN LOW"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/unitstatelabel"
            android:gravity="center_vertical|center_horizontal" />
        <TextView
            android:id="@+id/sensorreadinglabel"
            android:text="Sensor Reading:"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:textSize="25dp"
            android:layout_below="@+id/unitstate"
            />
        <TextView
            android:id="@+id/sensorreading"
            android:text="150"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/sensorreadinglabel"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <Button
            android:id="@+id/testpassbutton"
            android:text="Pass"
            android:layout_width="174dp"
            android:layout_height="294dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textSize="20dp"
            android:background="#99CC00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >
        <Button
            android:id="@+id/testfailbutton"
            android:text="Fail"
            android:layout_width="174dp"
            android:layout_height="294dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textSize="25dp"
            android:background="#FF4444"/>
    </RelativeLayout>
</LinearLayout>

